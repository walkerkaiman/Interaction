{
  "name": "OSC Output Trigger",
  "type": "output",
  "classification": "trigger",
  "mode": "trigger",
  "description": "Sends OSC message with value 1 to a specified IP address and port when triggered. Compatible with input trigger modules.",
  "fields": [
    {
      "name": "ip_address",
      "type": "text",
      "label": "IP Address",
      "default": "127.0.0.1"
    },
    {
      "name": "port",
      "type": "text",
      "label": "Port",
      "default": "8000"
    },
    {
      "name": "osc_address",
      "type": "text",
      "label": "OSC Address",
      "default": "/data"
    }
  ],
  "config_schema": {
    "ip_address": {
      "type": "string",
      "default": "127.0.0.1",
      "required": true
    },
    "port": {
      "type": "string",
      "default": "8000",
      "required": true
    },
    "osc_address": {
      "type": "string",
      "default": "/data",
      "required": true
    }
  }
} 