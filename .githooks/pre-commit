#!/bin/bash
#
# Pre-commit hook for Interaction Framework
# Runs quick regression tests before allowing commits
#

set -e

echo "ğŸ” Running pre-commit tests..."

# Check if we're in the right directory
if [ ! -f "main.py" ]; then
    echo "âŒ Not in project root directory"
    exit 1
fi

# Run quick tests (unit + API tests)
echo "ğŸ§ª Running quick regression tests..."
python tests/run_tests.py quick

if [ $? -eq 0 ]; then
    echo "âœ… All tests passed! Proceeding with commit."
    exit 0
else
    echo "âŒ Tests failed! Commit blocked."
    echo "ğŸ’¡ Fix the failing tests or use 'git commit --no-verify' to bypass."
    exit 1
fi