#!/bin/bash
#
# Pre-push hook for Interaction Framework
# Runs comprehensive tests before allowing pushes
#

set -e

echo "ğŸš€ Running pre-push tests..."

# Check if we're in the right directory
if [ ! -f "main.py" ]; then
    echo "âŒ Not in project root directory"
    exit 1
fi

# Get the branch being pushed
branch=$(git rev-parse --abbrev-ref HEAD)
echo "ğŸ“‹ Pushing branch: $branch"

# Run different test suites based on branch
if [ "$branch" = "main" ] || [ "$branch" = "master" ]; then
    echo "ğŸ¯ Main branch detected - running full test suite..."
    python tests/run_tests.py all
else
    echo "ğŸ”§ Feature branch detected - running API and frontend tests..."
    python tests/run_tests.py api
    python tests/run_tests.py frontend
fi

if [ $? -eq 0 ]; then
    echo "âœ… All tests passed! Proceeding with push."
    exit 0
else
    echo "âŒ Tests failed! Push blocked."
    echo "ğŸ’¡ Fix the failing tests or use 'git push --no-verify' to bypass."
    exit 1
fi